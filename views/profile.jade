extends ./layouts/_index.jade
block header
	include ./layouts/_menus/_user.jade
		.center.margin-top-2
			div(style="background-image: url(#{user.image.thumb})").user-image.mdl-shadow--2dp
			p.mdl-typography--display-1.mdl-color-text--grey-800.margin-0= user.name
			p.mdl-typography--title.mdl-color-text--grey-600.font-weight-2= user.email
		.mdl-grid
			.mdl-cell.mdl-cell--10-col.mdl-cell--12-col-tablet.mdl-cell--12-col-phone.mdl-cell--1-offset-desktop.mdl-card.mdl-shadow--2dp
				p.mdl-typography--headline.mdl-color--grey-100.center.padding-1.margin-0 Edit profile
				form(action="/profile?_method=PUT" method="POST" enctype="multipart/form-data").mdl-grid.margin-1
					.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--6-col.margin-center
						input(value="#{user.name}" name="name" type="text" id="name" ).mdl-textfield__input
						label(for="name").mdl-textfield__label Full name
					.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--6-col.margin-center
						input(value="#{user.email}" name="email" type="email" id="email" ).mdl-textfield__input
						label(for="email").mdl-textfield__label Email
					.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.mdl-cell.mdl-cell--6-col.margin-center
						input(name="password" type="password" id="password" ).mdl-textfield__input
						label(for="password").mdl-textfield__label Password
					.mdl-textfield.mdl-js-textfield.mdl-textfield--file.mdl-cell.mdl-cell--6-col.margin-center
						input(placeholder="Image" type="text" readonly)#uploadFile.mdl-textfield__input
						.mdl-button.mdl-button--primary.mdl-button--icon.mdl-button--file
							i.material-icons attach_file
							input(type="file" name="image" accept="image/*")#uploadBtn
					.mdl-cell.mdl-cell--4-col.mdl-cell--8-offset.right
						button(type="submit").mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent.mdl-color-text--white Update profile
