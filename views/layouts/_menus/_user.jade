.mdl-layout.mdl-js-layout.mdl-layout--fixed-header
	header.mdl-layout__header
		.mdl-layout__header-row
			span.mdl-layout-title Welcome 
				small.font-weight-2 #{user.name}
			.mdl-layout-spacer
			nav.mdl-navigation.mdl-layout--large-screen-only
				a(href="/sign_out").mdl-navigation__link Sign out
	.mdl-layout__drawer
		span.mdl-layout-title Menu
		nav.mdl-navigation
			a(href="/sign_out").mdl-navigation__link Sign out
	main.mdl-layout__content
		.page-content
			block body

